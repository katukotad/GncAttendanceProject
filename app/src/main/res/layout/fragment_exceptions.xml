<ScrollView
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#EEEEEE">
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.secureapplication.gncattendance.ExceptionsFragment"
    android:background="#EEEEEE"
    android:layout_marginLeft="25dp"
    android:layout_marginTop="20dp">


    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:background="@drawable/round_edge_background">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Exceptions"
                android:textColor="#134F7E"
                android:id="@+id/exceptionFragmentHeadingTextView"
                android:textSize="24sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <Button
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:text="OnDuty/ Medical"
                android:id="@+id/exceptionFragmentOnDutyButton"
                android:background="@drawable/button1"
                android:layout_margin="5dp"
                android:layout_column="0"
                android:textColor="#FFFFFF"/>
            <Button
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:text="New class"
                android:id="@+id/exceptionFragmentDifferentClassAttendanceButton"
                android:background="@drawable/button"
                android:layout_margin="5dp"
                android:layout_column="1"
                android:textColor="#FFFFFF"
                />
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:text="Password Change"
                android:id="@+id/exceptionFragmentPasswordChangeAttendanceButton"
                android:background="@drawable/button2"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_column="0"
                android:textColor="#FFFFFF"/>
            <Button
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:text="Report"
                android:id="@+id/exceptionFragmentReportAttendanceButton"
                android:background="@drawable/button3"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_column="1"
                android:textColor="#FFFFFF"/>
        </TableRow>

    </TableLayout>
</RelativeLayout>
</ScrollView>